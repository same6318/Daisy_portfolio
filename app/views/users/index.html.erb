
  <h1 class="text-center"> マイページ</h1>
  

  <h3>トピック件数：<%= current_user.topics.size %>件</h3>
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% @topics.each do |topic| %>
        <div class="col">
          <div class="card shadow-sm" style="width: 20rem;">
            <% if topic.topic_images.attached? %>
              <%= image_tag topic.topic_images.first, class: "bd-placeholder-img card-img-top", style: "width: 100%; height: 225px; object-fit: cover;" %>
            <% else %>
              <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder" preserveAspectRatio="xMidYMid slice" focusable="false">
                <rect width="100%" height="100%" fill="#eeeeee"></rect>
                <text x="50%" y="50%" fill="#aaaaaa" dy=".3em" text-anchor="middle">No image</text>
              </svg>
            <% end %>
            <div class="card-body">
              <h6 class="card-subtitle mb-2 text-body-secondary"></h6>
              <p class="card-text">
                <div><%= topic.title %></div>
                <div><%= topic.content %></div>
              </p>
              <%= link_to "詳細", topic_path(topic), class: "card-link" ,class:"btn btn-custom" %>
              <% if topic.author_name %>
                <% if topic.user.screen_name.present? || topic.user.name.present? %>
                  <small class="text-muted text-break"><%= topic.user.screen_name.present? ? truncate(topic.user.screen_name) : truncate(topic.user.name) %></small>
                <% else %>
                  <small class="text-muted">匿名希望</small>
                <% end %>
              <% else %>
                <small class="text-muted">匿名希望</small>
              <% end %>
              <small class="text-muted"><%= topic.created_at.strftime('%y/%m/%d') %></small>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-center mt-5">
      <%= paginate @topics, param_name: :topics_page %>
    </div>
  </div>




  <h3>レビュー件数： <%= current_user.reviews.size %>件</h3>
  <div class="reviews-container">
    <% if @current_user_reviews.present? %>
      <% @current_user_reviews.each do |review| %>
        <div class="card" style="width: 18rem; margin-bottom: 1rem;">
          <div class="card-body">
            <h6 class="card-subtitle mb-2 text-body-secondary">企業名：<%= review.company.name %></h6>
            <p class="card-text">
              <div>作成日時：<%= review.created_at.strftime('%Y/%m/%d %H:%M') %></div>
            </p>
            <%= link_to "詳細", user_review_path(current_user, review), class: "card-link" ,class:"btn btn-custom"  %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>







  <div class="d-flex justify-content-center mt-3">
    <%= paginate @current_user_reviews, param_name: :reviews_page  %>
  </div>




















