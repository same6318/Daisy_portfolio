<h1> Daisyマイページ</h1>

<h3>投稿したレビュー件数: <%= current_user.reviews.size %>件</h3>

<table>
  <tbody>
    <% if @current_user_reviews.present? %>
      <% @current_user_reviews.each do |review| %>
        <tr>
          <td>
            <%= link_to "レビュー", user_review_path(current_user, review) %>
            <div>レビューした企業名：<%= review.company.name %></div>
            <div>作成日時：<%= review.created_at.strftime('%Y/%m/%d %H:%M') %></div>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= paginate @current_user_reviews, param_name: :reviews_page %>

<h3>投稿したトピック件数：<%= current_user.topics.size %>件</h3>
<table>
  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td>
          <% if topic %>
            <%= link_to "トピック", topic_path(topic) %>
          <% end %>
        </td>
        <td>投稿内容：<%=topic.title %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @topics, param_name: :topics_page %>




