<h2>アカウント新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%#= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード"%><br/>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード確認" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :name ,"氏名"%><br/>
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :age, '年代' %><br>
      <%= f.select :age, options_for_select(User.ages.keys.map { |k| [I18n.t("enums.user.age.#{k}"), k] }), include_blank: true %>
    </div>

    <div class="field">
      <%= f.label :gender, '性別' %><br>
      <%= f.select :gender, options_for_select(User.genders.keys.map { |k| [I18n.t("enums.user.gender.#{k}"), k] }), include_blank: true %>
    </div>

    <div class="field">
        <%= f.label :screen_name ,"ハンドルネーム"%><br/>
        <%= f.text_field :screen_name, autofocus: true %>
    </div>

    <div class="field">
      <% available_roles = User.roles.keys - ['admin'] %> <!-- 管理者ロールを除外 -->
      <%= f.label :role, 'アカウントの種類' %><br>
      <%= f.select :role, options_for_select(available_roles.map { |k| [I18n.t("enums.user.role.#{k}"), k] }), include_blank: true %>
    </div>

    <h3>利用規定</h3>

    <div class="google-document">
    <iframe src="https://docs.google.com/document/d/e/2PACX-1vRlIoP6EPfB_p0MBwK3xfBK7FAoxjV5JfeV-DTMalFHNH9nn1VKPLAYKr--_546PDfs9-zKM8AOCCAg/pub?embedded=true"></iframe>
    </div>

    <div class="actions">
      <%= f.submit "登録する" %>
    </div>
  <% end %>

<%= render "devise/shared/links", button_text: "Googleでアカウント登録" %>


