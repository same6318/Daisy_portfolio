<table>
  <thead>
    <tr>
      <th>企業一覧</th>
    </tr>
  </thead>
</table>

 <p><%= sort_link(@q, :name, "企業名で並べ替え", hide_indicator: true) %></p>

  <%= search_form_for @q, url: admin_companies_path, method: :get do |f| %>
    <%= f.label :name, "企業名検索" %>
    <%= f.search_field :name_cont %>
    <%= f.label :address, "住所検索" %>
    <%= f.search_field :address_cont %>

    <%= f.submit "検索" %>
  <% end %>

  <p><%= link_to "検索結果をリセットする", admin_companies_path %></p>


  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= link_to "詳細", admin_company_path(company) %></td><br>
        <td>企業名：<%= company.name %></td><br>
        <td>企業レビュー数：<%= company.reviews_count %>
      </tr>
    <% end %>
  </tbody>

<%= paginate @companies %>